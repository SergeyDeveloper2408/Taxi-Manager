<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/rounded_background">

    <ImageView
        android:id="@+id/iconTaxi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/ic_taxi_car" />

    <TextView
        android:id="@+id/bidsIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/iconTaxi"
        android:textColor="@color/grayColor"
        android:text="ID" />

    <TextView
        android:id="@+id/bidsStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/bidsId"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/grayColor"
        android:text="State" />


    <TextView
        android:id="@+id/bidsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bidsIdLabel"
        android:layout_toEndOf="@+id/iconTaxi"
        android:textColor="@color/grayColor"
        android:text="1" />

    <TextView
        android:id="@+id/bidsState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/bidsId"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bidsStateLabel"
        android:textColor="@color/grayColor"
        android:text="Canceled" />

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="false"
        android:background="@drawable/more_action_background">

        <ImageView
            android:id="@+id/iconMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_more_horiz" />
    </RelativeLayout>

</RelativeLayout>