<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customerEditProfileMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context="com.sergeydeveloper7.taximanager.view.fragments.customer.CustomerEditProfileFragment">

    <RelativeLayout
        android:id="@+id/photoRelativeLayout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/customerProfilePhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_customers_avatar"
            app:civ_border_color="@color/materialYellowAdditional"
            app:civ_border_width="5dp"
            />

        <ImageView
            android:id="@+id/imageViewCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_camera"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editCustomerProfileFieldsRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginStart="@dimen/marginLarge"
        android:layout_below="@+id/photoRelativeLayout"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editProfileNameTextInputLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputGray"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editProfileNameTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_screen_username"
                android:textColor="@color/grayColor"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editProfileEmailTextInputLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editProfileNameTextInputLayout"
            android:theme="@style/TextInputGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editProfileEmailTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/main_screen_email_address"
                android:textColor="@color/grayColor"
                />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/verifyEmailResultImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editProfileNameTextInputLayout"
            android:layout_toEndOf="@+id/editProfileEmailTextInputLayout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_cancel" />

        <ProgressBar
            android:id="@+id/editCustomerProfileEmailProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editProfileNameTextInputLayout"
            android:layout_toEndOf="@+id/editProfileEmailTextInputLayout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editProfilePhoneNumberTextInputLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editProfileEmailTextInputLayout"
            android:theme="@style/TextInputGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editProfilePhoneNumberTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_screen_phonenumber"
                android:inputType="number"
                android:textColor="@color/grayColor"
                />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/verifyPhoneNumberResultImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editProfileEmailTextInputLayout"
            android:layout_toEndOf="@+id/editProfileEmailTextInputLayout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_cancel" />

        <ProgressBar
            android:id="@+id/editCustomerProfilePhoneNumberProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editProfileEmailTextInputLayout"
            android:layout_toEndOf="@+id/editProfilePhoneNumberTextInputLayout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/editCustomerProfileProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
